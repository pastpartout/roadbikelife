<?xml version="1.0" encoding="utf-8"?>
<form
        addrulepath="/components/com_roadbikelife/models/rules"
        addfieldpath="/components/com_roadbikelife/models/fields"
>
    <fields name="general" label="Allgemein">
        <fieldset name="general_main" label="Allgemein">
            <field
                    name="id"
                    type="hidden"
                    label="JGLOBAL_FIELD_ID_LABEL"
                    description="JGLOBAL_FIELD_ID_DESC"
                    class="readonly d-none"
                    size="10"
                    default="0"
                    readonly="true"
            />
            <field
                    name="title"
                    type="text"
                    label="JGLOBAL_TITLE"
                    description="JFIELD_TITLE_DESC"
                    class="input-xxlarge input-large-text btn-block"
                    size="40"
                    required="true"
            />
            <field
                    name="articletext"
                    type="editor"
                    label="Text"
                    buttons="true"
            />

            <field
                    name="catid"
                    type="hidden"
                    required="true"
                    readonly="true"
                    default="8"
                    class="hide"
            />
        </fieldset>
        <fieldset name="general_sidebar" label="Allgemein">

            <field type="spacer" hr="true"/>
            <field
                    name="alias"
                    type="text"
                    label="JFIELD_ALIAS_LABEL"
                    description="JFIELD_ALIAS_DESC"
                    hint="JFIELD_ALIAS_PLACEHOLDER"
                    size="40"
                    class="col-md-12"

            />
            <field
                    name="tags"
                    type="tag"
                    label="JTAG"
                    description="JTAG_FIELD_SELECT_DESC"
                    class="col-md-12"
                    multiple="true"
            />
            <field
                    name="access"
                    type="accesslevel"
                    label="JFIELD_ACCESS_LABEL"
                    filter="UINT"
                    class="form-select form-select-color-state"
                    validate="options"

            />
            <field
                    name="state"
                    type="status"
                    label="JSTATUS"
                    description="JFIELD_PUBLISHED_DESC"
                    class="chzn-color-state col-md-12"
                    filter="intval"
                    size="1"
                    default="1"
            >
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
                <option value="2">JARCHIVED</option>
                <option value="-2">JTRASHED</option>
            </field>

        </fieldset>
    </fields>
    <fields name="images" label="Bilder">
        <fieldset name="images" label="Bilder">
            <field
                    name="image_intro"
                    type="file"
                    label="Intro Bild"
            />
            <field
                    name="image_fulltext"
                    type="file"
                    label="Volltext Bild"
            />
            <field
                    name="gallery_images"
                    type="file"
                    multiple="true"
                    label="Galeriebilder"
            />


        </fieldset>
    </fields>

</form>
